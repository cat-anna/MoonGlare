FROM ubuntu:latest

RUN apt-get -y update && apt-get install -y

RUN apt-get -y install \
    build-essential 

# install required libs
RUN apt-get -y install \
    libboost-dev  \
    libfreetype6-dev  \
    libglfw3-dev  \
    libglew-dev  \
    libassimp-dev  \
    libfreeimage-dev  \
    libopenal-dev  \
    libflac-dev  \
    libmodplug-dev  \
    libogg-dev  \
    libmpg123-dev  \
    liblua5.1-0-dev  \
    libfmt-dev  \
    libbullet-dev  


CMD ["/bin/bash"]
